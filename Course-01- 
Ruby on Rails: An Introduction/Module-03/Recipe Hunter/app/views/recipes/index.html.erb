<h1>Recipes for <%= @search %></h1>

<table>
  <tr>
    <th>Photo</th>
    <th>Title</th>
    <th>Ingredients</th>
  </tr>
  <% @recipes.each do |recipe| %>
  <tr>
    <td><%= link_to image_tag recipe["thumbnail"], recipe %></td>
    <td><%= link_to sanitize(recipe["title"]), "" %></td>
    <td><%= recipe["ingredients"] %></td>
  </tr>
  <% end %>
</table>

